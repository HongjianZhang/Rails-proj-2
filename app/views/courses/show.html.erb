<h1> <%= "#{@course.title} (#{@course.courseNumber})" %><h1/>
<h4> <%= "#{@course.department}" %><h4/>
<br/>
<p> <%= "#{@course.description}" %> <p/>
<br/>
<br/>
<%= simple_form_for @comment do |f| %>
  <%= f.input :semester %>
  <%= f.input :instructor %>
  <%= f.input :content %>
  <%= f.button :submit %>
<% end %>
<br/>
<% @comments.each do |c|%>
  <h1> <%= "#{c.semester}" %> <h3/>
  <h1> <%= "#{c.instructor}" %> <h3/>
  <p> <%= "#{c.content}" %> <p/>
  <br/>
<% end %>